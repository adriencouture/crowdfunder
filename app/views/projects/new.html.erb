<h1>New Project</h1>
<%= form_for @project do |f| %>

  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, ['Music', 'Comic', 'Car', 'Technology', 'Design', 'Art', 'Sport', 'Finance', 'Food'], prompt: 'Select One' %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :goal %>
    <%= f.number_field :goal %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <h2>Rewards</h2>
  <div id="rewards">
  <%= f.fields_for :rewards do |reward_fields| %>
    <%= render 'rewardd_fields', f: reward_fields %>
  <% end %>

    <div class="link">
      <%= link_to_add_association "Add Reward", f, :rewards %>
    </div>
  </div>

  <div class="action">
    <%= f.submit "Create Project" %>
  </div>
<% end %>
